{
  "name": "shipguard",
  "version": "0.1.0",
  "description": "Code-level operational maturity analysis for Next.js projects",
  "type": "module",
  "bin": {
    "shipguard": "./bin/shipguard.mjs"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "bin"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "tsc --noEmit"
  },
  "keywords": [
    "nextjs",
    "production-readiness",
    "static-analysis",
    "security",
    "linter",
    "ci"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "commander": "^13.1.0",
    "fast-glob": "^3.3.3",
    "picocolors": "^1.1.1",
    "typescript": "^5.7.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "vitest": "^3.0.0"
  }
}
